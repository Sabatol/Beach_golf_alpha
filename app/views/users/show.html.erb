<body>
      <ul class="nav nav-pills justify-content-center py-2" id="pills-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
            aria-controls="pills-home" aria-selected="true">Infos personnelles</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab"
            aria-controls="pills-profile" aria-selected="false">Description</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab"
            aria-controls="pills-contact" aria-selected="false">A participé à</a>
        </li>
      </ul>
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
          <br/>
          <br/>
          <br/>
          <p> <strong>Prénom:</strong> <%= @user.first_name %> <br>
          <strong>Nom:</strong> <%= @user.last_name%> <br>
          <strong>Email:</strong> <%= @user.email%><br>
        </div>
        <div class="tab-pane fade pr-5" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <br/>
        <br/>
        <br/>
        <p><strong>Description :</strong> <%= @user.description%></p></div>
          <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
            <br/>
            <br/>
            <br/>
              <% @user.events.each do |event|%>
                <div class="card">
                  <img src="..." class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"><%= event.title %></h5>
                    <p class="card-text"><%=event.description%></p>
                    <p class="card-text"><%=event.price%> €</p>
                    <p class="card-text"><%=event.location%></p>
                    <p class="card-text">Soumis le : <%=event.start_date.strftime('%d/%m/%Y %H:%M')%></p>
                  </div>
                  <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                    <%= link_to "#{event.participations.count} participants", event_path(event.id), :class =>"btn btn-outline-info"  %>
                    <br/>
                  </div>
                </div>
              <%end%>
</body>


